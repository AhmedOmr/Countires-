<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Registration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tinput0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:textColorHint="#5E5959"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#000000">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/editname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/editreg"
                    android:drawablePadding="5dp"
                    android:hint="User name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tinput1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tinput0"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:textColorHint="#5E5959"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#000000">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/editemail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/editreg"
                    android:drawablePadding="5dp"
                    android:hint="Email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/tinput2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tinput1"
                android:layout_margin="10dp"
                android:textColorHint="#5E5959"
                app:passwordToggleDrawable="@drawable/passbackgr"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#000000">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/editpassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/editreg"
                    android:drawablePadding="5dp"
                    android:hint="Password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tinput3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tinput2"
                android:layout_margin="10dp"
                android:textColorHint="#5E5959"
                app:passwordToggleDrawable="@drawable/passbackgr"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#000000">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/editconpassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/editreg"
                    android:drawablePadding="5dp"
                    android:hint="Confirm Password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/registerit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tinput3"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/btnsignemail"
                android:onClick="register_it"
                android:padding="12dp"
                android:text=" register it "
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>
</FrameLayout>