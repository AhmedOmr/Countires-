<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewzkr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#fafafa"
    app:cardCornerRadius="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/textloginhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text=" Log in "
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#000"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tinputl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textloginhead"
                android:layout_margin="10dp"
                android:textColorHint="#5E5959"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#000000">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/editlogemail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/editreg"
                    android:drawablePadding="5dp"
                    android:hint="Email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tinputl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tinputl1"
                android:layout_margin="10dp"
                android:textColorHint="#5E5959"
                app:passwordToggleDrawable="@drawable/passbackgr"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#000000">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/editlogpass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/editreg"
                    android:drawablePadding="5dp"
                    android:hint="Password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/loginnow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tinputl2"
                android:layout_alignParentLeft="true"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btndialog"
                android:gravity="center"
                android:text="continue"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/cancelogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tinputl2"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btndialog"
                android:gravity="center"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textforget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cancelogin"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:gravity="right"
                android:padding="5dp"
                android:text=" Forget Password ? "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#4D430F"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>
</android.support.v7.widget.CardView>