<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="10dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:padding="3dp"
                android:text="Country: "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/co"
                android:layout_centerHorizontal="true"
                android:fontFamily="casual"
                android:gravity="center"
                android:padding="8dp"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/ca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/count"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:padding="3dp"
                android:text="Captial: "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/capt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ca"
                android:layout_centerHorizontal="true"
                android:fontFamily="casual"
                android:gravity="center"
                android:padding="8dp"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/capt"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:padding="3dp"
                android:text="Continent: "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/regio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg"
                android:layout_centerHorizontal="true"
                android:fontFamily="casual"
                android:gravity="center"
                android:padding="8dp"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Alcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/regio"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:padding="3dp"
                android:text="Alpha Code: "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alphaco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Alcode"
                android:layout_centerHorizontal="true"
                android:fontFamily="casual"
                android:gravity="center"
                android:padding="8dp"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/populates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/alphaco"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:padding="3dp"
                android:text="Population: "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/poulatio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/populates"
                android:layout_centerHorizontal="true"
                android:fontFamily="casual"
                android:gravity="center"
                android:padding="8dp"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
